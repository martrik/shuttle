<div class="min-h-screen bg-base-200 py-12 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-end mb-8">
      <a href="<%= new_deployment_path %>" class="btn btn-primary">
        <%= phosphor_icon "plus", class: "h-5 w-5" %>
        <span>New Deployment</span>
      </a>
    </div>

    <% if @deployments.empty? %>
      <div class="card bg-base-100 shadow-xl p-12 flex flex-col items-center justify-center">
        <h2 class="text-2xl font-semibold mb-2">No deployments yet</h2>
        <p class="text-base-content/70 mb-6">Create your first deployment to get started</p>
        <a href="<%= new_deployment_path %>" class="btn btn-primary">
          <%= phosphor_icon "plus", class: "h-5 w-5" %>
          <span>New Deployment</span>
        </a>
      </div>
    <% else %>
      <div class="grid gap-6">
        <% @deployments.each do |deployment| %>
          <div class="card card-border card-border border-base-300 bg-base-100">
            <div class="card-body">
              <div class="flex items-start justify-between">
                <h2 class="card-title"><%= deployment.service_name %></h2>
                <span class="badge badge-success">Active</span>
              </div>
              <p class="text-base-content/70"><%= deployment.project_name %></p>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
                <div>
                  <p class="text-xs text-base-content/60 mb-1">Docker Image</p>
                  <p class="text-sm font-mono text-base-content break-all"><%= deployment.docker_image %></p>
                </div>
                <div>
                  <p class="text-xs text-base-content/60 mb-1">Created</p>
                  <p class="text-sm text-base-content"><%= deployment.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
                </div>
              </div>

              <div class="card-actions justify-end mt-4">
                <%= button_to "Delete", deployment_path(deployment), method: :delete, data: { turbo_confirm: "Are you sure? This will delete the service from Railway." }, class: "btn btn-outline btn-error btn-sm" %>
                <%= button_to "Restart", restart_deployment_path(deployment), method: :post, class: "btn btn-outline btn-primary btn-sm" %>
                <a href="<%= deployment_path(deployment) %>" class="btn btn-primary btn-sm">
                  View Details
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>

