<div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-4xl font-bold text-white mb-2">Deployment Details</h1>
        <p class="text-blue-200">Service: <%= @deployment.service_name %></p>
      </div>
      <a 
        href="<%= new_deployment_path %>" 
        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md shadow-md transition duration-200 flex items-center space-x-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
          <path d="M224,128a8,8,0,0,1-8,8H136v80a8,8,0,0,1-16,0V136H40a8,8,0,0,1,0-16h80V40a8,8,0,0,1,16,0v80h80A8,8,0,0,1,224,128Z"/>
        </svg>
        <span>New Deployment</span>
      </a>
    </div>

    <% if flash[:notice] %>
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-md">
        <p class="text-sm text-green-800"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md">
        <p class="text-sm text-red-800"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-xl overflow-hidden">
      <div class="p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Project Name</h3>
              <p class="text-lg font-semibold text-gray-900"><%= @deployment.project_name %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Service Name</h3>
              <p class="text-lg font-semibold text-gray-900"><%= @deployment.service_name %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Docker Image</h3>
              <p class="text-lg font-mono text-gray-900 break-all"><%= @deployment.docker_image %></p>
            </div>
          </div>

          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Created At</h3>
              <p class="text-lg text-gray-900"><%= @deployment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Service ID</h3>
              <p class="text-sm font-mono text-gray-600 break-all"><%= @deployment.service_id %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Project ID</h3>
              <p class="text-sm font-mono text-gray-600 break-all"><%= @deployment.project_id %></p>
            </div>
          </div>
        </div>

        <% if @service_details %>
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Railway Service Details</h3>
            
            <% if @service_details["deployments"] && @service_details["deployments"]["edges"].any? %>
              <div class="space-y-3">
                <% @service_details["deployments"]["edges"].first(3).each do |edge| %>
                  <% deployment = edge["node"] %>
                  <div class="p-4 bg-gray-50 rounded-md border border-gray-200">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-sm font-medium text-gray-700">Deployment ID: <%= deployment["id"][0..8] %>...</span>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= deployment['status'] == 'SUCCESS' ? 'bg-green-100 text-green-800' : deployment['status'] == 'FAILED' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= deployment["status"] || "UNKNOWN" %>
                      </span>
                    </div>
                    <% if deployment["url"] %>
                      <a href="<%= deployment['url'] %>" target="_blank" class="text-sm text-blue-600 hover:text-blue-800 underline">
                        <%= deployment["url"] %>
                      </a>
                    <% end %>
                    <p class="text-xs text-gray-500 mt-2">
                      <%= Time.parse(deployment["createdAt"]).strftime("%B %d, %Y at %I:%M %p") rescue deployment["createdAt"] %>
                    </p>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500">No deployment information available yet.</p>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
        <div class="flex items-center space-x-4">
          <%= button_to restart_deployment_path(@deployment), method: :post, class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-md shadow-md transition duration-200 flex items-center justify-center space-x-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
              <path d="M240,56v48a8,8,0,0,1-8,8H184a8,8,0,0,1,0-16H211.4L184.81,71.64l-.25-.24a80,80,0,1,0-1.67,114.78,8,8,0,0,1,11,11.63A95.44,95.44,0,0,1,128,224h-1.32A96,96,0,1,1,195.75,60L224,85.8V56a8,8,0,1,1,16,0Z"/>
            </svg>
            <span>Restart Deployment</span>
          <% end %>

          <%= button_to deployment_path(@deployment), method: :delete, data: { turbo_confirm: "Are you sure? This will delete the service from Railway and remove it from subway." }, class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-md shadow-md transition duration-200 flex items-center justify-center space-x-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
              <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
            </svg>
            <span>Delete Service</span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-6 text-center">
      <a href="<%= deployments_path %>" class="text-sm text-blue-200 hover:text-blue-100 underline">
        ‚Üê Back to Deployments
      </a>
    </div>
  </div>
</div>
