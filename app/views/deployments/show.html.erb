<% content_for :breadcrumbs do %>
  <li><a href="<%= deployments_path %>">Deployments</a></li>
  <li><%= @deployment.service_name %></li>
<% end %>

<div class="min-h-screen bg-base-200 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-base-content/60 mb-1">Project Name</h3>
              <p class="text-lg font-semibold text-base-content"><%= @deployment.project_name %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-base-content/60 mb-1">Service Name</h3>
              <p class="text-lg font-semibold text-base-content"><%= @deployment.service_name %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-base-content/60 mb-1">Docker Image</h3>
              <p class="text-lg font-mono text-base-content break-all"><%= @deployment.docker_image %></p>
            </div>
          </div>

          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-base-content/60 mb-1">Created At</h3>
              <p class="text-lg text-base-content"><%= @deployment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-base-content/60 mb-1">Service ID</h3>
              <p class="text-sm font-mono text-base-content/70 break-all"><%= @deployment.service_id %></p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-base-content/60 mb-1">Project ID</h3>
              <p class="text-sm font-mono text-base-content/70 break-all"><%= @deployment.project_id %></p>
            </div>
          </div>
        </div>

        <% if @service_details %>
          <div class="divider"></div>
          <div class="pt-2">
            <h3 class="text-lg font-semibold text-base-content mb-4">Railway Service Details</h3>
            
            <% if @service_details["deployments"] && @service_details["deployments"]["edges"].any? %>
              <div class="space-y-3">
                <% @service_details["deployments"]["edges"].first(3).each do |edge| %>
                  <% deployment = edge["node"] %>
                  <div class="card card-border border-base-300 bg-base-200">
                    <div class="card-body p-4">
                      <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-base-content">Deployment ID: <%= deployment["id"][0..8] %>...</span>
                        <span class="badge <%= deployment['status'] == 'SUCCESS' ? 'badge-success' : deployment['status'] == 'FAILED' ? 'badge-error' : 'badge-warning' %>">
                          <%= deployment["status"] || "UNKNOWN" %>
                        </span>
                      </div>
                      <% if deployment["url"] %>
                        <a href="<%= deployment['url'] %>" target="_blank" class="link link-primary text-sm">
                          <%= deployment["url"] %>
                        </a>
                      <% end %>
                      <p class="text-xs text-base-content/60 mt-2">
                        <%= Time.parse(deployment["createdAt"]).strftime("%B %d, %Y at %I:%M %p") rescue deployment["createdAt"] %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-base-content/70">No deployment information available yet.</p>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="card-actions bg-base-200 px-8 py-4">
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 w-full">
          <%= button_to restart_deployment_path(@deployment), method: :post, class: "btn btn-primary flex-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
              <path d="M240,56v48a8,8,0,0,1-8,8H184a8,8,0,0,1,0-16H211.4L184.81,71.64l-.25-.24a80,80,0,1,0-1.67,114.78,8,8,0,0,1,11,11.63A95.44,95.44,0,0,1,128,224h-1.32A96,96,0,1,1,195.75,60L224,85.8V56a8,8,0,1,1,16,0Z"/>
            </svg>
            <span>Restart Deployment</span>
          <% end %>

          <%= button_to deployment_path(@deployment), method: :delete, data: { turbo_confirm: "Are you sure? This will delete the service from Railway and remove it from subway." }, class: "btn btn-error flex-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
              <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
            </svg>
            <span>Delete Service</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
