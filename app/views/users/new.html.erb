<div class="min-h-screen bg-base-200 flex items-center justify-center p-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-primary rounded-full mb-4">
        <%= phosphor_icon "subway", height: 65, class: "text-primary-content" %>
      </div>
      <h1 class="text-4xl font-bold mb-2">Subway</h1>
      <p class="text-base-content/70">Railway Deployment Manager</p>
    </div>

    <div class="card bg-base-100 shadow-xl p-8">
      <h2 class="text-2xl font-semibold mb-6">All Aboard!</h2>

      <%= form_with url: users_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <div class="label">
            <span class="label">Railway API Token</span>
          </div>
          <input 
            type="text" 
            name="railway_api_key" 
            id="railway_api_key" 
            required
            class="input w-full mt-1"
            placeholder="Enter your Railway API token"
          />
          <div class="label">
            <span class="label text-xs opacity-70">
              Get your token from 
              <a href="https://railway.app/account/tokens" target="_blank" class="link link-primary">
                Railway Dashboard
              </a>
            </span>
          </div>
        </div>

        <button type="submit" class="w-full btn btn-primary">
          <span>Start Your Journey</span>
          <%= phosphor_icon "arrow-right", height: 20 %>
        </button>
      <% end %>
    </div>

    <div class="mt-6 text-center">
      <p class="text-sm text-base-content/70">
        Manage your Railway deployments with ease
      </p>
    </div>
  </div>
</div>
