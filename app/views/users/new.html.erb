<div class="min-h-screen bg-base-200 flex items-center justify-center p-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-primary rounded-full mb-4">
        <%= phosphor_icon "subway", height: 65, class: "text-primary-content" %>
      </div>
      <h1 class="text-4xl font-bold mb-2">Subway</h1>
      <p class="text-base-content/70">Simplified Railway</p>
    </div>

    <div class="card bg-base-100 shadow-xl p-8">
      <h2 class="text-2xl font-semibold mb-6 text-center">All aboard!</h2>

      <%= form_with url: users_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <label for="railway_api_key" class="label">
            Railway API token
          </label>
          <input 
            type="text" 
            name="railway_api_key" 
            id="railway_api_key" 
            required
            class="input w-full mt-1"
            placeholder="Enter your Railway API token"
          />
          <div class="label text-xs">
            Make sure that it is bound to a Workspace
          </div>
        </div>

        <button type="submit" class="w-full btn btn-primary">
          <span>Start your journey</span>
          <%= phosphor_icon "arrow-right", height: 20 %>
        </button>
      <% end %>
    </div>
  </div>
</div>
